#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro sealos <args ...>"
  echo ""

  sealos --help
}

version() {
  sealos --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    sealos "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
